<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Group Name Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With you and:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/etGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter group name"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background" />
    </LinearLayout>

    <!-- Expense Description -->
    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a description"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp" />

    <!-- Amount -->
    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="â‚¹ 0.00"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp" />

    <!-- Split Button -->
    <Button
        android:id="@+id/btnSplit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paid by you and split equally"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/gray"
        android:padding="12dp"
        android:textSize="16sp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Additional Options (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/llOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rbYouOwedFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are owed the full payment"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/rbOtherOwedFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other is owed the full payment"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/rbSplitEqually"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Split equally among all" />
    </LinearLayout>
</LinearLayout>
