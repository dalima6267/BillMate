<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Group Icon (Top-right) -->
        <ImageView
            android:id="@+id/ivGroupIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_group_24"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="12dp"
            android:contentDescription="Group Icon" />

        <!-- Group Details -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/ivGroupIcon"
            android:layout_marginEnd="12dp">

            <!-- Group Name -->
            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- Group Description -->
            <TextView
                android:id="@+id/tvGroupDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Description"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp" />

            <!-- Stylish Divider -->
            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="10dp"
                android:alpha="0.6"/>

            <!-- Group Members -->
            <TextView
                android:id="@+id/tvGroupMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥ Group Members"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Amount -->
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Amount: â‚¹0.00"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <!-- Split Type -->
            <TextView
                android:id="@+id/tvSplitType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Œ Split Type: Equally among all"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
